<!DOCTYPE html>
<html lang="en">
<% include header %>
<body ng-app="helpDeskApp">
<div id="wrapper" class="container-fluid">
    <div id="page-wrapper">
        <div class="row">
            <div class="container-fluid">
                <div>
                    <div class="container">
                        <div class="row">
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <h1 class="page-header">
                        Help Desk<br>
                        <small>Statistics Overview</small>
                    </h1>
                    <ol class="breadcrumb">
                        <li class="active">
                            <i class="fa fa-dashboard"></i> Dashboard
                        </li>
                    </ol>
                </div>
            </div>
            <!-- /.row -->
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"><i class="fa fa-ticket fa-fw"></i> Ticket Panel</h3>
                    </div>
                    <div ng-controller="adminTicketsController" class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover table-striped">
                                <thead>
                                <tr>
                                    <th>Ticket Id #</th>
                                    <th>Ticket Subject</th>
                                    <th>Ticket Content</th>
                                    <th>Ticket Create Date</th>
                                    <th>Ticket Update Date</th>
                                    <th>Ticket Status</th>
                                    <th>Update Status</th>

                                </tr>
                                </thead>
                                <tbody>
                                <tr ng-repeat="ticket in adminTickets">
                                    <td>{{$index+1}}</td>
                                    <td>{{ticket.subject}}</td>
                                    <td><label class="truncate">{{ticket.content}}</label></td>
                                    <td>{{ticket.createDate}}</td>
                                    <td>{{ticket.updateDate}}</td>
                                    <td>{{ticket.status}}</td>

                                    <td ng-if="ticket.status == 'NEW' ">
                                        <button style="height:40px; padding:8px 15px; margin: 0px;!important;"
                                                class="btn btn-primary btn-xs" type="button" name="$completed"
                                                value="complete" ng-click="updateStatus(ticket._id);">Complete
                                        </button>
                                    </td>
                                    <td ng-if="ticket.status != 'NEW' "><label style="color: green">Ticket
                                            Resolved!!!</label></td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
<% include footer %>
</html>
