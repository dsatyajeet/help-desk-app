<!DOCTYPE html>
<html lang="en">
<% include header %>
<body ng-app="helpDeskApp">
<div id="wrapper" class="container-fluid">
    <div id="page-wrapper">
        <div class="row">
            <div class="container-fluid">
                <div>
                    <div class="container">
                        <div class="row">
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <h1 class="page-header">
                        Help Desk<br>
                        <small>Statistics Overview</small>
                    </h1>
                    <ol class="breadcrumb">
                        <li class="active">
                            <i class="fa fa-dashboard"></i> Dashboard
                        </li>
                    </ol>
                </div>
            </div>
            <!-- /.row -->
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"><i class="fa fa-ticket fa-fw"></i> Ticket Panel</h3>
                    </div>
                    <div ng-controller="adminTicketsController" class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover table-striped">
                                <thead>
                                <tr>
                                    <th>Ticket Id #</th>
                                    <th>Ticket Subject</th>
                                    <th>Ticket Content</th>
                                    <th>Ticket Create Date</th>
                                    <th>Ticket Update Date</th>
                                    <th>Ticket Status</th>
                                    <th>Update Status</th>

                                </tr>
                                </thead>
                                <tbody>
                                <tr ng-repeat="ticket in adminTickets">
                                    <td>{{$index+1}}</td>
                                    <td>{{ticket.subject}}</td>
                                    <td><label class="truncate">{{ticket.content}}</label></td>
                                    <td>{{ticket.createDate}}</td>
                                    <td>{{ticket.updateDate}}</td>
                                    <td>{{ticket.status}}</td>
                                    <td>
                                        <button type="button" class="btn btn-info btn-lg" data-toggle="modal"
                                                data-target="#myModal"> View
                                        </button>
                                    </td>
                                    <div class="modal fade" id="myModal" role="dialog">
                                        <div class="modal-dialog modal-lg left">
                                            <!-- Modal content-->
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                </div>
                                                <div class="modal-body">

                                                    <div class="container col-md-12 panel panel-group"
                                                         style="background-image:url('../images/Black-Wood.jpg'); margin-top: 10px">
                                                        <div class="row">
                                                            <div class="feature-img col-md-2 slideInLeft"><br><br><br><br>
                                                                <img src="../images/ticket-logo.png" alt="image"
                                                                     class="img-responsive wow fadeInLeft">
                                                            </div>
                                                            <div class="col-md-7 wow slideInLeft">
                                                                Subject:<input ng-model="ticket.subject" type="text"
                                                                               name="subject" class="form-control input-sm"
                                                                               disabled/>
                                                                Content:<textarea ng-model="ticket.content"
                                                                                  class="form-control" cols="9" rows="3"
                                                                                  name="content" disabled></textarea>
                                                                Status:
                                                                <div class="form-control input-sm">{{ticket.status}}</div>
                                                                Create Date:
                                                                <div class="form-control input-sm">{{ticket.createDate |
                                                                    dateFormat}}
                                                                </div>
                                                                Update Date:
                                                                <div class="form-control input-sm">{{ticket.updateDate |
                                                                    dateFormat}}
                                                                </div>
                                                            </div>
                                                            <div class=" container col-md-3"><br>
                                                                <a href="javascript:toggle('div#login','div#registration');"
                                                                   class="btn-primary">Complete</a><br><br><br>
                                                                <a href="javascript:toggle('div#registration','div#login')"
                                                                   class="btn-primary">Complete</a><br><br><br>
                                                                <a href="javascript:toggle('div#login','div#registration');"
                                                                   class="btn-primary">Complete</a><br><br><br>
                                                                <a href="javascript:toggle('div#registration','div#login')"
                                                                   class="btn-primary">Complete</a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    Hello admin..!!  <i>Please Update The Status..!</i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</div>
</body>
<% include footer %>
</html>
