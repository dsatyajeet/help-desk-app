<!DOCTYPE html>
<html lang="en">
<% include header %>
<body ng-app="helpDeskApp">
<div id="wrapper" class="container-fluid">
    <div id="page-wrapper">
        <div class="row">
            <div class="container-fluid">
                <div>
                    <div class="container">
                        <div class="row">
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <h1 class="page-header">
                        Help Desk<br>
                        <small>Statistics Overview</small>
                    </h1>
                </div>
            </div>
        </div>
        <!-- /.row -->
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-ticket fa-fw"></i> Ticket Panel</h3>
                </div>
                <div ng-controller="adminTicketsController" class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped">
                            <thead>
                            <tr>
                                <th>Ticket Id #</th>
                                <th>Ticket Subject</th>
                                <th>Ticket Content</th>
                                <th>Ticket Create Date</th>
                                <th>Ticket Update Date</th>
                                <th>Ticket Status</th>
                                <th>Edit Status</th>
                                <th>Flag</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr ng-repeat="ticket in adminTickets">
                                <td>{{$index+1}}</td>
                                <td>{{ticket.subject}}</td>
                                <td><label class="truncate">{{ticket.content}}</label></td>
                                <td>{{ticket.createDate | dateFormat}}</td>
                                <td>{{ticket.updateDate | dateFormat}}</td>
                                <td>{{ticket.status}}</td>
                                <td>
                                    <button type="button" class="btn btn-info btn-sm" data-toggle="modal"
                                            data-target="#viewTicket" ng-click="viewTicket(ticket)">View Ticket
                                    </button>
                                </td>
                                <td>
                                    <div ng-if="ticket.status=='NEW'">&nbsp;
                                        <div class="glyphicon glyphicon-flag" style="color: red"></div>
                                    </div>
                                    <div ng-if="ticket.status=='Progress'">&nbsp;
                                        <div class="glyphicon glyphicon-flag" style="color: yellow"></div>
                                    </div>
                                    <div ng-if="ticket.status=='COMPLETED'">&nbsp;
                                        <div class="glyphicon glyphicon-flag" style="color: green"></div>
                                    </div>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="modal fade" id="viewTicket" role="dialog">
                        <div class="modal-dialog modal-lg left">
                            <!-- Modal content-->
                            <div class="modal-content">
                                <div class="modal-body">
                                    <div class="container col-md-12 panel panel-group"
                                         style="background-image:url('../images/Black-Wood.jpg'); margin-top: 10px">
                                        <div class="row">
                                            <div class="feature-img col-md-2 slideInLeft"><br><br><br><br>
                                                <img src="../images/ticket-logo.png" alt="image"
                                                     class="img-responsive wow fadeInLeft">
                                            </div>
                                            <div class="col-md-7 wow slideInLeft">
                                                Subject:<input ng-model="ticket.subject" type="text"
                                                               name="subject" class="form-control input-sm"
                                                               disabled/>
                                                Content:<textarea ng-model="ticket.content"
                                                                  class="form-control" cols="9" rows="3"
                                                                  name="content" disabled></textarea>
                                                Status:
                                                <div class="form-control input-sm">{{ticket.status}}</div>
                                                Create Date:
                                                <div class="form-control input-sm">{{ticket.createDate |
                                                    dateFormat}}
                                                </div>
                                                Update Date:
                                                <div class="form-control input-sm">{{ticket.updateDate |
                                                    dateFormat}}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <div class=" container col-md-10">
                                        <div class="row">
                                            <a href="javascript:toggle('div#login','div#registration');"
                                               class="btn-primary">Complete</a>
                                            <a href="javascript:toggle('div#registration','div#login')"
                                               class="btn-primary">Next-Level</a>
                                            <a href="javascript:toggle('div#registration','div#login')"
                                               class="btn-primary" data-dismiss="modal">Close</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
<% include footer %>
</html>
