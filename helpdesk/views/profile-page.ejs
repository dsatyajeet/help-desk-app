<!DOCTYPE html>
<html lang="en">
<%include header%>
<body ng-app="helpDeskApp">
<div ng-controller="profileController" id="wrapper" class="container-fluid">
    <div class="col-md-offset-7 col-md-5" style="margin-top: 80px">
        <div class="head-btn wow fadeInLeft">
            <a ng-if="profile.roles[0].name=='Customer'" href="/ticket"
               class="btn-primary">Add New Ticket</a>
            <a ng-if="profile.roles[0].name=='Admin'" href="/ticket/adminTickets"
               class="btn-primary">Show Tickets</a>
            <a ng-if="profile.roles[0].name=='Customer'" href="/ticket/myTickets"
               class="btn-primary">Show Tickets</a>
        </div>
    </div>
    <div class="container" style="margin-top: 100px">
        <div class="row">
            <div class="col-md-5 intro-pic wow slideInLeft">
                <img src="../images/home-head.jpg" alt="image" class="img-responsive">
            </div>
            <form name="profileForm" id="profileForm" role="form" novalidate>
                <div class="col-md-6 container col-md-offset-1">
                    <div class="col-sm-offset-0 col-sm-10">
                        <label for="userName">User Name</label>
                        <input type="text" ng-model="userEntry.username" class="form-control input-sm"
                               name="username"
                               id="username" disabled
                               placeholder="User Name" required>
                        <input type="hidden" ng-model="userEntry._id" ng-value="userEntry._id">
                    </div>
                    <div id="update-profile" class="form-group">
                        <div class="col-sm-offset-0 col-sm-10">
                            <label for="firstname">First name</label>
                            <input type="text" ng-model="userEntry.firstname" class="form-control input-sm"
                                   name="firstname"
                                   id="firstname"
                                   placeholder="First Name" required>
                                <span style="color:red"
                                      ng-show="profileForm.firstname.$invalid && !profileForm.firstname.$pristine">
                                    <span ng-show="profileForm.firstname.$invalid && !profileForm.firstname.$pristine">First Name is required.</span>
                                </span>


                        </div>
                        <div class="col-sm-offset-0 col-sm-10">
                            <label for="lastname">Last name</label>
                            <input type="text" ng-model="userEntry.lastname" class="form-control input-sm"
                                   name="lastname"
                                   id="lastname"
                                   placeholder="Last Name" required>
                                <span style="color:red"
                                      ng-show="profileForm.lastname.$invalid && !profileForm.lastname.$pristine">
                                    <span ng-show="profileForm.lastname.$invalid && !profileForm.lastname.$pristine">LastName is required.</span>
                                </span>

                        </div>
                        <div class="col-sm-offset-0 col-sm-10">
                            <label for="email">Email ID</label>
                            <input type="text" ng-model="userEntry.email" class="form-control input-sm" name="email"
                                   id="email"
                                   placeholder="Email ID" required>
                                <span style="color:red"
                                      ng-show="profileForm.email.$invalid && !profileForm.email.$pristine">
                                    <span ng-show="profileForm.email.$invalid && !profileForm.email.$pristine">Email Id is required.</span>
                                </span>

                        </div>
                        <div class="col-sm-offset-0 col-sm-10">
                            <label for="mobile">Mobile Number</label>
                            <input type="text" ng-model="userEntry.mobile" class="form-control input-sm" name="mobile"
                                   id="mobile"
                                   placeholder="Mobile Number" required>
                                <span style="color:red"
                                      ng-show="profileForm.mobile.$invalid && !profileForm.mobile.$pristine">
                                    <span ng-show="profileForm.mobile.$invalid && !profileForm.mobile.$pristine">Mobile Number is required.</span>
                                </span>

                        </div>
                        <div class="col-sm-offset-1 col-sm-8">
                            <div class="col-sm-offset-3 col-sm-7">
                                <button ng-disabled="profileForm.$invalid" type="submit" ng-click="update(userEntry)"
                                        class="btn-default"
                                        value="Update">Update
                                </button>
                            </div>
                        </div>

                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<% include footer%>
</body>
</html>